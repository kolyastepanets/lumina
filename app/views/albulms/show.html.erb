<div class='container'>
  <div class='row'>
    <% @albulms.each do |albulm| %>
      <div class="col-md-4 col-xs-6 center">
        <%= link_to albulm.title, albulm_path(albulm), { class: 'decorate-link' } %>
      </div>
    <% end %>
  </div>
  <div class='row'>
    <h1 class='albulm-title'>
      <%= @albulm.title %>
    </h1>
    <p class='albulm-description'>
      <%= @albulm.description.html_safe %>
    </p>
    <% @albulm.images.each do |image| %>
      <div class='col-xs-6 center albulm-image-wrap'>
        <%= image_tag(image.file.thumb, class: 'albulm-image') %>
      </div>
    <% end %>
  </div>
</div>
